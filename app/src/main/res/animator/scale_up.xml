<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:propertyName="scaleX"
        android:duration="800"
        android:valueFrom="0"
        android:valueTo="1.0"
        android:pivotX="50%p"
        android:valueType="floatType"/>
    <objectAnimator
        android:propertyName="scaleY"
        android:duration="800"
        android:valueFrom="0"
        android:valueTo="1.0"
        android:pivotY="50%p"
        android:valueType="floatType"/>

